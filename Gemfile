source 'http://rubygems.org'

# hosting
gem "aws-sdk"
gem "aws-s3"
gem "heroku"

# base
gem "rails", "3.1.3"
gem "rake", "0.8.7"
gem "pg", "0.11.0"

# views
gem "haml-rails"
gem "sass-rails"
gem "coffee-rails"
gem "simple_form"
gem "RedCloth"
gem "acts_as_list"
gem "friendly_id"

# images
gem "paperclip"
gem "exifr"

# services
gem 'newrelic_rpm'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'uglifier'
end

group :development do
  gem "taps"
end

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end

group :production do
  gem 'thin'
end
