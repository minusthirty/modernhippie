%tr.image
  %td.bool
    = f.input(:featured, :label => false) if f.object.orientation == 'horizontal'
  %td.image= image_tag(f.object.photo.url(:admin))
  %td= f.input :photo, :as => :file, :label => false  
  
  %td.remove
    = f.hidden_field(:_destroy)
    = link_to_function("Remove", "ImageField.remove(this)")